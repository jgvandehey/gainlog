<%= simple_form_for(@goal, html: { class: "form-horizontal"}) do |f| %>
  <%= f.error_notification %>

  <%= f.input :title %>
  <%= f.input :due_date, as: :string, input_html: { class: "datepicker" } %>

  <div class="form-actions">
    <%= f.button :submit, class: "btn btn-primary" %>
  </div>
<% end %>